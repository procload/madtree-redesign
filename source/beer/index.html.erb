<div class="container">
  <section class="core-beers">
    <h3 class="with-border">Our Front Runners</h3>

    <div class="beers">
      <% 7.times do %>
        <div class="beer-preview">
          <%= link_to image_tag("http://placehold.it/180x220"), "/beer/beer.html" %>
          <h5><%= link_to "Happy Amber", "/beer/beer.html" %></h5>
        </div> <!-- beer-preview -->
