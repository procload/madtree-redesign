      <div class="beers">
        <% 8.times do %>
          <div class="beer-preview">
            <%= link_to image_tag("http://placehold.it/110x150"), "/beer/beer.html" %>
            <h5><%= link_to "Happy Amber", "/beer/beer.html" %></h5>
          </div>
        <% end %>
      </div>
      <%= link_to "See All Limited", "/beer/category.html", class: "btn btn-primary" %>
    </div> <!-- /beer-category -->

    <div class="beer-category">
      <h4>Series</h4>
      <div class="beers">
        <% 8.times do %>
          <div class="beer-preview">
            <%= link_to image_tag("http://placehold.it/110x150"), "/beer/beer.html" %>
            <h5><%= link_to "Happy Amber", "/beer/beer.html" %></h5>
          </div>
        <% end %>
      </div>
      <%= link_to "See All Series", "/beer/category.html", class: "btn btn-primary" %>
    </div> <!-- /beer-category -->
    <div class="beer-category">
      <h4>Retired</h4>
      <%= link_to "See All Retired", "/beer/category.html", class: "btn btn-primary" %>
