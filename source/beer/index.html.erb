    <div class="beers">
      <% 4.times do %>
        <div class="beer-preview">
          <%= link_to image_tag("http://placehold.it/180x220"), "/beer/beer.html" %>
          <h5><%= link_to "Happy Amber", "/beer/beer.html" %></h5>
        </div> <!-- beer-preview -->
      <% end %>
    </div>

    <%= link_to "See All Seasonal", "/beer/category.html", class: "btn btn-primary" %>
